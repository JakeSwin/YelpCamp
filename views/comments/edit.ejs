<%- include("../partials/header") %>

<div class="container">
    <div class="row mt-5">
        <div class="col-3"></div>
        <div class="col-6">
            <h1 class="text-center">Edit Comment</h1>
            <form action="/campgrounds/<%= campgroundID %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary" type="submit">
                </div>
            </form>

            <a href="/campgrounds">Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>