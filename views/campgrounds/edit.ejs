<%- include("../partials/header") %>

<div class="container">
    <div class="row mt-5">
        <div class="col-3"></div>
        <div class="col-6">
            <h1 class="text-center">Edit <%= campground.name %></h1>
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" placeholder="name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[image]" placeholder="image url" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[description]" placeholder="description" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary" type="submit">
                </div>
            </form>

            <a href="/campgrounds">Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>